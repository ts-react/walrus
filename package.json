{
  "name": "@walrus/workspace",
  "private": true,
  "repository": "git@github.com:ts-react/walrus.git",
  "author": "wangxingkang <wang_xingkang@qq.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "build": "father-build --watch",
    "clean": "lerna clean",
    "prerelease": "father-build",
    "lint": "node ./packages/walrus-cli/lib/cli.js lint",
    "lint:style": "node ./packages/walrus-cli/lib/cli.js stylelint",
    "prettier": "node ./packages/walrus-cli/lib/cli.js prettier",
    "commitlint": "node ./packages/walrus-cli/lib/cli.js commitlint --env HUSKY_GIT_PARAMS",
    "release": "yarn --pure-lockfile && node scripts/release.js"
  },
  "devDependencies": {
    "@types/assert": "^1.4.3",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.138",
    "@types/mustache": "^0.8.32",
    "@types/node": "^12.7.5",
    "chalk": "^2.4.2",
    "execa": "^2.0.4",
    "father-build": "^1.9.5",
    "globby": "^10.0.1",
    "husky": "^3.0.9",
    "inquirer": "^7.0.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "minimist": "^1.2.0",
    "readline": "^1.3.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rimraf": "^2.6.2",
    "semver": "^6.3.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier",
      "commit-msg": "yarn commitlint"
    }
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
